---
import Sidebar from '../components/Sidebar.astro'
import Footer from '../components/Footer.astro'
import {Image} from 'astro:assets'
import logo from '../assets/logo/logo.png'
import frame from '../assets/decoracion/2023_ERIKSSON_02.png'
import arriba from '../assets/decoracion/logoround.png'
import '@fontsource/unifrakturmaguntia';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="src/assets/logo/logoVector.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="sitemap-index.xml" />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<Image src={logo} alt="logo" />
		</header>

		<main>
			<div class="sidebar">
				<Image class="frame" src={frame} alt=""/>
				<Sidebar />
			</div>

			<div class="content">
				<slot />
			</div>
		</main>
		<div class="arriba">
			<a href="#">  <Image class="logoArriba" src={ arriba } alt="logo hacia arriba"  />  </a>
		</div>
		<footer>
			<Footer />
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-image: url(../assets/decoracion/background.png);
		background-repeat: repeat;
	}

	body{
		display: grid;
		column-gap: 2em;
		grid-template-columns: auto auto;

	}

	main{
		display: grid;
		grid-template-columns: 17vw auto;
		column-gap: 2em;
	}
	.sidebar{
		/* background-color: #353535;
		border-radius: 5px;
		grid-column: 1 / 2;
		background-image: url(../assets/decoracion/);
		background-size: 5em;
		background-repeat: repeat-y;
		background-position: right;
		background-position-y: top; */
	
	}
 
	.frame{
		width: 14em;
		height: 20em;
		position: absolute;
		z-index: 1;
		background: rgb(0, 0, 0, 0.7);
		background-repeat: no-repeat;
		background-size: 200px 300px;
		border-radius: 10px;
	}

	.content{

		background: rgb(0, 0, 0, 0.7);
		grid-column: 2 / 3;
		border-radius: 10px;
		color: #FFF;
	}

	header, footer{
		display: grid;
		grid-column: 1 / 3;
		justify-content: center;
		color: #fff;
	}

	a{
		color: #fff;
	}

	.arriba{
		display: flex;
		margin-bottom: 0em;
		margin-right: 10em;
		
	}

	.logoArriba{
		display: flex;
		width: 3em;
		height: 3em;
		position: fixed;
	}


</style>
